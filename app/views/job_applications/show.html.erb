<% if @job_application.company %>
  <div class="application-company-info">
    <h3><%= @job_application.company.name %></h3>
    <%= @job_application.company.address %>
    <a href="<%= @job_application.company.website %>"><%= @job_application.company.website %></a>
  </div>
<% else %>
  <h3>No Company assigned to this application</h3>
<% end %>
<div class="application-info row">
  <div class="application-status">
    <%= @job_application.status %>
  </div>
  <%= @job_application.date_submitted %> 
  <% if @job_application.resume.file? %>
    <h3>Resume:</h3>
    <iframe class="col-md-12 file-attachment" src="<%= @job_application.resume.url %>"></iframe>
  <% else %>
    <h4>No Resume Assigned</h4>
  <% end %>
  <% if @job_application.cover_letter.file? %>
    <h3>Cover Letter:</h3>
    <iframe class="col-md-12 file-attachment" src="<%= @job_application.cover_letter.url %>"></iframe>
  <% else %>
    <h4>No Cover Letter Assigned</h4>
  <% end %>
</div>
