<div class="row list-group-item">
  <div class="col-md-2">
    <%= job_application.date_submitted %>
  </div>
  <% if job_application.company %>
    <div class="col-md-2">
      <%= job_application.company.name %>
    </div>
  <% end %>
  <div class="col-md-2">
    <%= form_for job_application, remote: true do |f| %>
      <%= f.select :status, options_for_select(["open", "closed"], job_application.status), {}, onchange: "submitForm(this)" %>
    <% end %>
  </div>
  <div class="col-md-2">
    <%= link_to "View Application", job_application_path(job_application), method: "get" %>
  </div>
  <div class="col-md-2">
    <%= link_to "delete", job_application_path(job_application), method: "delete", remote: true %>
  </div>
</div>
