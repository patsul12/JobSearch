<div class="col-md-10 col-center">
  <h3>New Contact</h3>
  <%= form_for @contact, remote: true do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email_address %>
      <%= f.email_field :email_address, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.phone_field :phone_number, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :mailing_address %>
      <%= f.text_field :mailing_address, class: "form-control" %>
    </div>
    <div class="form-group" id="company-select-form">
      <%= f.label :company_id, "Select a Company" %>
      <% if @companies %>
        <%= f.select :company_id, @companies.map { |c| [c.name, c.id] }, {}, class: "form-control", id: "company-select" %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.button class: "btn btn-block btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"} %>
    </div>
  <% end %>
</div>
