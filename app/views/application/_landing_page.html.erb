<section id="be-the-first" class="pad-xl">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 text-center margin-30 wow fadeIn white" data-wow-delay="0.6s">
        <h2>Job Search Tracker</h2>
        <p class="lead">Revolutionizing your job search.</p>
      </div>
    </div>

    <div class="iphone wow fadeInUp" data-wow-delay="1s">
      <%= image_tag "iphone.png" %>
    </div>
  </div>
</section>

<section id="main-info" class="pad-xl">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 wow fadeIn" data-wow-delay="0.4s">
        <hr class="line purple">
        <h3>Track Your Applications</h3>
        <p>Keep up to date and organized during your job search with an easy to use interface allowing tracking of all facets of your application.</p>
      </div>
      <div class="col-sm-4 wow fadeIn" data-wow-delay="0.8s">
        <hr  class="line blue">
        <h3>Manage Your Contacts</h3>
        <p>Never forget who you spoke to while networking or interviewing with our Contact Tracker.</p>
      </div>
      <div class="col-sm-4 wow fadeIn" data-wow-delay="1.2s">
        <hr  class="line yellow">
        <h3>Save Jobs you are Interested In</h3>
        <p>Keep tabs on job opening that interest you from any site that you browse.</p>
      </div>
    </div>
  </div>
</section>

<section id="invite" class="pad-lg light-gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 text-center">
        <i class="fa fa-pencil margin-40"></i>
        <h2 class="black">Sign Up Today!</h2>
        <br />
        <p class="black">What are you waiting for? Start tracking your job search FREE today.</p>
        <br />

        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
          </div><hr>
          <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <p>
              already a user? <%= link_to "Sign in here.", new_user_session_path %>
            </p>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>


